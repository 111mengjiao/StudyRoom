/* pages/card.wxss */
.wrapped{
  width: 100%;
  letter-spacing: 0.1rem;
}

.top{
  background-color: #F2D6A4;
  height: 10vh;
  display: flex;
  width: 100%;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.header{
  font-size: 35rpx;
  align-content: center;
  color: #C17A42;
  font-weight: 700;
}

.finish{
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  line-height: 45rpx;
}

.note-wrap{
  width: 100%;
  height: 90vh;
  margin: 0 auto;
}

.main{
  height: 100%;
  background-color: #FBF2E1;
  
}

.input{
  margin: 0 20rpx 20rpx 20rpx;
  border-bottom: 2rpx solid gray;
  font-size: 35rpx;
  line-height: 60rpx;
}

.submitBtn{
  margin-top: 15rpx;
  border:3rpx solid #C17A42;
  background-color: #FBF2E1;
  font-size: 25rpx;
  font-weight: 500;
}